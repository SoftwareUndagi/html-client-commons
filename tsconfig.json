{
  "compilerOptions": {
      "outDir": "build/lib",
      "declarationDir": "./build/types",
      "module": "commonjs",
      "target": "es6",
      "lib": [
          "es5",
          "es6",
          "dom"
      ],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "declaration": true
  },
  "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "html-client-commons/setupTests.ts",
      "**/*.spec.ts",
      "**/*.test.ts",
      "config",
      "dist",
      "html-client-commons.ts", 
      "index.ts"
    ]
}